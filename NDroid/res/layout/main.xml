<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"  android:layout_gravity="left" android:gravity="center|left">
     <LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1">
      <Button android:id="@+id/buttonStart" android:textSize="20dip" android:layout_width="70dip" android:layout_height="70dip" android:drawableTop="@drawable/record"></Button>
	  <Button android:id="@+id/buttonStop" android:textSize="20dip" android:layout_width="70dip" android:layout_height="70dip" android:drawableTop="@drawable/stop"></Button>
      <!-- <Button android:id="@+id/buttonTalk" android:text="Talk" android:textSize="20dip" android:layout_width="70dip" android:layout_height="70dip"></Button> -->
	  <Button android:id="@+id/buttonGo" android:textSize="17dip" android:layout_width="70dip" android:layout_height="70dip" android:drawableTop="@drawable/globe"></Button>
	  <Button android:id="@+id/buttonGrid" android:textSize="17dip" android:layout_width="70dip" android:layout_height="70dip" android:drawableTop="@drawable/grid"></Button>
    </LinearLayout>
   	<Gallery android:layout_width="fill_parent" android:layout_height="190dip" android:id="@+id/galleryView"></Gallery>  
	<LinearLayout
      android:orientation="horizontal"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:layout_weight="1"
      android:gravity="center|right">
      <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NexSight" 
		android:textSize="16dip" android:padding="10dip" android:gravity="center|right" android:id="@+id/textStat"/>
      <ProgressBar android:id="@+id/pg" android:layout_width="wrap_content" android:layout_height="wrap_content" android:visibility="invisible"></ProgressBar>
	</LinearLayout>
</LinearLayout>